@model MenuCityViewModel

<style>
    th,
    td,
    tr {
        padding: 5px;
        text-align: center !important;
    }

    div {
        text-align: right !important;
    }
</style>
<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>داشبورد
                            <small>پنل مدیریت چندکاره</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">داشبورد</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>


    @if (TempData["msg"] != null)
    {
        <p class="alert alert-danger p-3 form-control">@TempData["msg"]</p>
    }






    <div class="col-xl-12 xl-100">

        <div class="card p-5">


            <h4 class="alert alert-secondary mb-5">ویرایش و ایجاد منو</h4>

            <form asp-action="editMenu" method="post" class="row">

                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="MenuName">نام منو</label>
                        <input asp-for="MenuName" class="form-control" required />
                        <input asp-for="MenuId" type="hidden" value="@Model.MenuId" />
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label>نمایش منو برای</label>
                        <div class="row pr-4">

                            @for (int i = 0; i < Model.Cities.Count; i++)
                            {
                                <div class="form-check">
                                    <label class="form-check-label">@Model.Cities[i].CityName</label>
                                    <input type="checkbox" asp-for="Cities[i].IsSelected" class="form-check-input" />
                                    <input type="hidden" asp-for="Cities[i].CityId" value="@Model.Cities[i].CityId"/>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary form-control">ثبت</button>
                </div>
            </form>


        </div>
    </div>
</div>

</div>
</div>
<!-- Container-fluid Ends-->

</div>