@model List<VmUser>

<style>
    th, td, tr {
        padding: 5px;
        text-align: center !important;
    }
</style>
<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>لیست کاربران @ViewBag.Admin.NameFamily
                            <small>کد نمایندگی: @ViewBag.Admin.InviteCode</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/admin/home/index"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/admin/home/listadmin">مدیران</a></li>
                        <li class="breadcrumb-item active">کاربران</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>


    @if (TempData["msg"] != null)
    {
        <p class="alert alert-danger p-3 form-control">@TempData["msg"]</p>
    }

    <div class="col-xl-12 xl-100">
        <div class="card">
            <div class="card-header">
                <h5>کاربران @ViewBag.Admin.NameFamily - تعداد: @ViewBag.Users.Count</h5>
                <a href="/admin/home/listadmin" class="btn btn-primary mt-2">بازگشت به لیست مدیران</a>
            </div>
            
            <div class="card-body">
                <div class="user-status table-responsive latest-order-table">
                    <table class="table table-bordernone">
                        <thead>
                            <tr>
                                <td scope="col">ردیف</td>
                                <td scope="col">نام و نام خانوادگی</td>
                                <td scope="col">نام تعمیرگاه</td>
                                <td scope="col">شماره تماس</td>
                                <td scope="col">شهر</td>
                                <td scope="col">آدرس</td>
                                <td scope="col">کلمه عبور</td>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Users != null && ViewBag.Users.Count > 0)
                            {
                                int i = 1;
                                @foreach (VmUser user in ViewBag.Users)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td class="font-danger">@user.FirstAndLastName</td>
                                        <td class="font-danger">@user.Url</td>
                                        <td class="digits">@user.Phone</td>
                                        <td class="font-danger">@user.CityName</td>
                                        <td class="font-danger">@user.Adress</td>
                                        <td class="font-danger">@user.Email</td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center">هیچ کاربری یافت نشد</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 