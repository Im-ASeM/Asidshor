<style>
    th,
    td,
    tr {
        padding: 5px;
        text-align: center !important;
    }
</style>
<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>داشبورد
                            <small>پنل مدیریت کیف پول</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">داشبورد</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>


    @if (TempData["msg"] != null)
    {
        <p class="alert alert-danger p-3 form-control">@TempData["msg"]</p>
    }






    <div class="col-xl-12 xl-100">

        <div class="card">
            <div class="card-header">

                <form action="/admin/home/ShowWalet/@ViewBag.id" method="post">
                    <div class="row justify-content-center  p-3">

                        <div class="col-xxl-6 col-lg-6 col-xl-6 col-md-6 col-12">
                            <input name="txt" class="form-control" type="text" placeholder="جستجوی توضیحات" value="@ViewBag.txt">


                        </div>

                        <div class="col-xxl-2 col-lg-2 col-xl-2 col-md-2 col-12 mt-1 ">
                            <button type="submit" class="btn btn-primary form-control">جستجو</button>

                        </div>

                    </div>
                </form>



                <h5> تعداد تراکنش : @ViewBag.walets.Count
                </h5>

                @* search *@

                @* <div class="card-header-right">
                <ul class="list-unstyled card-option">
                <li><i class="icofont icofont-simple-left"></i></li>
                <li><i class="view-html fa fa-code"></i></li>
                <li><i class="icofont icofont-maximize full-card"></i></li>
                <li><i class="icofont icofont-minus minimize-card"></i></li>
                <li><i class="icofont icofont-refresh reload-card"></i></li>
                <li><i class="icofont icofont-error close-card"></i></li>
                </ul>
                </div> *@
            </div>
            <div class="card-body">
                <div class="user-status table-responsive latest-order-table ">
                    <table class="table table-bordernone nowrap" style="white-space: nowrap;">
                        <thead>

                            <tr>
                                <td scope="col">ردیف</td>
                                <td scope="col">مبلغ (ریال)</td>
                                <td scope="col">بابت (توضیحات)</td>
                                <td scope="col">نوع</td>
                                <td scope="col">تاریخ</td>
                            </tr>


                        </thead>
                        <tbody>
                            @if (ViewBag.walets != null)
                            {
                                int i = 1;
                                @foreach (var item in ViewBag.walets)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td class="font-danger   white-space-nowrap">
                                            @if(item.variz == 0){
                                                <span>@item.bardasht-</span>;
                                            }
                                            else{
                                                <span>@item.variz+</span>
                                            }
                                        </td>
                                        <td class="font-danger  white-space-nowrap">@item.babat </td>
                                        <td class="digits  white-space-nowrap">
                                            @if(item.variz == 0){
                                                <span>برداشت</span>
                                            }
                                            else{
                                                <span>واریز</span>
                                            }
                                        </td>
                                        <td class="digits  white-space-nowrap">@PersianDate.ToPersianDateString(item.date)</td>
                                    </tr>
                                    i++;
                                }
                            }


                        </tbody>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->

</div>