<style>
    th,
    td,
    tr {
        padding: 5px;
        text-align: center !important;
    }
</style>
<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>داشبورد
                            <small>پنل مدیریت چندکاره</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item active">داشبورد</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>


    @if (TempData["msg"] != null)
    {
        <p class="alert alert-danger p-3 form-control">@TempData["msg"]</p>
    }






    <div class="col-xl-12 xl-100">

        <div class="card">

            <form action="/admin/home/AddCity" method="post" class="col-12">
                <div class="row justify-content-center  p-3">

                    <div class="col-xxl-6 col-lg-6 col-xl-6 col-md-6 col-12">
                        <input name="CityName" class="form-control" type="text"
                            placeholder=" نام شهر جدید را وارد کنید  " required>
                    </div>

                    <div class="col-xxl-2 col-lg-2 col-xl-2 col-md-2 col-12 mt-1 ">
                        <button type="submit" class="btn btn-primary form-control"> اضافه کردن </button>

                    </div>

                </div>
            </form>

            <div class="card-body">
                <div class="user-status table-responsive latest-order-table">
                    <table class="table table-bordernone">
                        <thead>

                            <tr>
                                <td scope="col">ردیف</td>
                                <td scope="col">نام شهر</td>
                                <td scope="col">ادمین مربوطه</td>
                                <td scope="col">تعداد کاربر</td>
                                <td scope="col">ویرایش</td>
                                <td scope="col">حذف</td>
                            </tr>


                        </thead>
                        <tbody>
                            @if (ViewBag.City != null)
                            {
                                int i = 1;
                                @foreach (City item in ViewBag.City)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td class="font-danger">@item.CityName </td>

                                        <td class="font-danger">
                                            @if (item.Admins.Count == 0)
                                            {
                                                <span>ندارد</span>
                                            }
                                            else
                                            {
                                                @foreach (Admin admin in item.Admins)
                                                {
                                                    <span>[@admin.NameFamily] </span>
                                                }
                                            }
                                        </td>

                                        <td class="font-danger">
                                            @item.Users.Count کاربر
                                        </td>
                                        <td class="font-danger">
                                            <a href="/admin/home/editCity/@item.Id" class="btn btn-warning form-control">ویرایش
                                            </a>
                                        </td>

                                        <td class="font-danger">

                                            <a href="/admin/home/DeleteCity/@item.Id" class="btn btn-warning form-control"
                                                onclick="return confirm('ایا از حذف مطمئن هستید ')">حذف </a>

                                        </td>


                                    </tr>
                                    i++;
                                }
                            }


                        </tbody>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Container-fluid Ends-->

</div>