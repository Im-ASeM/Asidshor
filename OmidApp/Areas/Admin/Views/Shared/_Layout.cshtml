<body class="rtl">

    <!-- page-wrapper Start-->
    <div class="page-wrapper">
        @{
            @inject Context _context
            var test = new pubdo(_context);
            var num = test.unread(User.FindFirst("Role").Value, Convert.ToInt32(User.Identity.GetId()));

        }


        <!-- Page Header Start-->
        <div class="page-main-header">
            <div class="main-header-right row">
                <div class="main-header-left d-lg-none">
                    <div class="logo-wrapper"><a href="#">
                            <img class="blur-up lazyloaded" src="/img/core-img/logo-small.png" alt=""
                                style="width: 50px; height: auto;">
                        </a>
                    </div>

                </div>
                <div class="mobile-sidebar">
                    <div class="media-body text-right switch-sm ">
                        <label class="switch"><a href="#"><i id="sidebar-toggle"
                                    data-feather="align-left"></i></a></label>
                    </div>
                </div>

                @if (num != 0)
                {
                    <div class="mobile-sidebar">
                        <a href="/admin/home/request" class="media-body text-right switch-sm"><i data-feather="bell"
                                class="mt-2"></i>
                            <span class="badge badge-pill badge-primary pull-right notification-badge">
                                @if (num != 0)
                                {
                                    @num
                                }
                            </span>
                        </a>
                    </div>
                }
                <div class="nav-right col">
                    <ul class="nav-menus">
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li class="onhover-dropdown">
                            <div class="media align-items-center"><img
                                    class="align-self-center pull-right img-50 rounded-circle blur-up lazyloaded"
                                    src="/img/core-img/logo-small.png" alt="header-user">
                                <div class="dotted-animation"><span class="animate-circle"></span><span
                                        class="main-circle"></span></div>
                            </div>
                            <ul class="profile-dropdown onhover-show-div p-20 profile-dropdown-hover">
                                <li><a href="/admin/home/profile"><i data-feather="user"></i>ویرایش رمز عبور</a></li>

                                <li><a href="/admin/home/exit"><i data-feather="log-out"></i>خروج</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="d-lg-none mobile-toggle pull-right"><i data-feather="more-horizontal"></i></div>
                </div>
            </div>
        </div>
        <!-- Page Header Ends -->

        <!-- Page Body Start-->
        <div class="page-body-wrapper">

            <!-- Page Sidebar Start-->
            <div class="page-sidebar">
                <div class="main-header-left d-none d-lg-block">
                    <div class="logo-wrapper"></div>
                </div>
                <div class="sidebar custom-scrollbar">
                    <div class="sidebar-user text-center">
                        <div><img class="img-60 rounded-circle lazyloaded blur-up" src="/img/core-img/logo-small.png"
                                alt="#">
                        </div>
                        @{
                            // دریافت اطلاعاتم از کوکی 
                            var inviteCode = Context.Request.Cookies["InviteCode"];
                            var nameFamily = Context.Request.Cookies["NameFamily"];
                        }
                        <h6 class="mt-3 f-14">@nameFamily</h6>
                        <p> کد دعوت : @inviteCode</p>
                    </div>
                    <ul class="sidebar-menu">


                        @if (User.FindFirst("Role").Value == "admin")
                        {
                            <li><a class="sidebar-header" href="/admin/home/index"><i data-feather="home"></i><span> لیست
                                        تعمیرگاه ها</span></a></li>
                            <li><a class="sidebar-header" href="/admin/home/inWalet"><i data-feather="home"></i><span>تراکنش
                                        تعمیرگاه ها </span></a></li>
                        }
                        else
                        {
                            <li><a class="sidebar-header" href="/admin/home/index"><i data-feather="home"></i><span> لیست
                                        مشتری های من</span></a></li>
                        }
                        @* @if (User.FindFirst("Role").Value == "admin")
                        {
                            <li><a class="sidebar-header" href="/admin/home/category"><i data-feather="home"></i><span>دسته
                                        بندی </span></a></li>
                        } *@


                        @* @if (User.FindFirst("Role").Value == "admin")
                        {
