<style>
  img {
    border: 5px;
  }


  .cta-text:hover {

    transform: scale(1.1);
    transition: 0.5s;


    background-color: #d10d0dfa;

  }
</style>



<div class="page-content-wrapper py-3 p-3">


  <div class="container mt-3 ">

















    <!-- Dark Mode -->
    <div class="container">


      <div class=" row">

        <div class="container mt-3 " OnClick="Code()">
          <div class="cta-text p-2 p-lg-4" style="background: linear-gradient(to left,#317e66, #91742c) !important;">
            <div class="row p-lg-2">
              <div class="col-12">
                <h6 class="text-white m-3  text-center">وارد کردن و ویرایش معرف</h6>
              </div>

            </div>
          </div>
        </div>

        @foreach (Menu item in ViewBag.ListMenus)
        {
          <div class="container mt-3 " OnClick="redirect(@item.Id)">
            <div class="cta-text p-2 p-lg-4" style="background: linear-gradient(to left,#28033b, #461161) !important;">
              <div class="row p-lg-2">
                <div class="col-12">
                  <h6 class="text-white m-3  text-center">@item.Name</h6>
                </div>

              </div>
            </div>
          </div>
        }

        <br>

      </div>





    </div>
    <!-- Internet Connection Status-->
    <div class="internet-connection-status" id="internetStatus"></div>

    <script>

      function redirect(id) {
        window.location.href = `/home/cat/${id}`;
      }
      function Code() {
        window.location.href = `/home/inviter`;
      }
    </script>
  </div>
</div>