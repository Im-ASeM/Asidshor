<div class="page-content-wrapper">

<div class="page-content mt-3" style="margin-top: 7px !important;">
    <style>
    p , h4 , h2{
        color: black;
    }
    </style>
       
    @if (ViewBag.Cards != null)
    {
           <br/>
                @foreach (var item in ViewBag.Cards)
                {

                <div class="row m-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                            <p class="card-title" dir="rtl">   شماره کارت: @item.CardNumber </p>
                            <p class="card-text" >   نام صاحب کارت: @item.OwnerName </p>
                            <p class="card-text" >   نام بانک: @item.BankName </p>
                            <button class="btn btn-secondary" onclick="copyCardNumber('@item.CardNumber')">کپی شماره کارت</button>

<script>
function copyCardNumber(cardNumber) {
    navigator.clipboard.writeText(cardNumber).then(function() {
        alert('شماره کارت کپی شد');
    }, function(err) {
        console.error('خطا در کپی کردن: ', err);
    });
}
</script>
                           
                                

                              
                                 
                             
                                 
                                         </div>
                        </div>
                    </div>
                    </div>
                    
                }
    }
    else{
        <br/>
       


         <p class="alert alert-danger p-3 m-3 text-center mt-7">  کارتی ثبت نشده است  </p>
                
               
                    
               

    }




</div>

</div>